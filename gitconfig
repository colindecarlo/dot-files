[user]
	name = Colin DeCarlo
	email = colin@thedecarlos.ca
[alias]
	ap = add --patch
	bc = branch --contains
	cb = checkout -b
	co = checkout
	dc = diff --color
	fu = fetch upstream
	pu = push upstream
	s = status
	sls = stash list
	pb = !sh -c 'git push $1 $(git rev-parse --abbrev-ref HEAD)' -
	mt = mergetool
	prep = !sh -c 'git fetch upstream && git checkout master && git merge --ff-only upstream/master && git push colin master' -

[merge]
	tool = vimdiff
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[core]
	editor = vim
